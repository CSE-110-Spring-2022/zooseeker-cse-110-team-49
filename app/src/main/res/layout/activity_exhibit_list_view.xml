<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExhibitListView">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exhibits"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/count"
        android:layout_width="119dp"
        android:layout_height="33dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:text="Count: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/return_button"
        android:layout_width="64dp"
        android:layout_height="34dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#72D1DD"
        android:onClick="onGoBackClicked"
        android:text="main"
        android:textColor="#6A4611"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="125dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="Exhibit List"
        app:layout_constraintStart_toEndOf="@+id/return_button"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>